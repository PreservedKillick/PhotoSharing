<% content_for(:title, "Profile | PhotoShare") %>

<%= image_tag @user.avatar.url(:thumb) %>

<h2><%= @user.name %></h2>

<h5>username:  <%= @user.username %></h5>

<h5>email:  <%= @user.email %></h5>

<br>
<br>

<% @photos.each do |photo| %>
  <%= link_to( image_tag(photo.image.url(:medium)), user_photo_path(@user, photo)) %>
<% end %>

<br>
<br>

<div class="row">
  <div class="col-lg-12 inline">
    <%= link_to "Home", root_path, class: 'btn btn-primary' %>
    <%= link_to "Edit Profile", edit_user_path(@user), class: 'btn btn-primary' %>
    <%= link_to "Add Photo", new_user_photo_path(@user), class: 'btn btn-primary' %>
    <%= link_to "Delete", user_path(@user),
                          :confirm => "Are you sure?",
                          :method => "delete",
                          :class => 'btn btn-danger' %>

  </div>
</div>

