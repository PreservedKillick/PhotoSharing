<% content_for(:title, "Add Photo | PhotoShare") %>

<div class='container'>
  <h2>Add a photo</h2>

  <%= render("layouts/errors", :object => @photo) %>

  <%= form_for [@user, @photo], :html => { :multipart => true } do |form| %>
    <div class="form-group">
      <%= form.label :file_name %>
      <%= form.text_field :image_file_name %>
    </div>
    <div class="form-group">
      <%= form.file_field :image %>
    </div>
    <%= form.submit(:class => 'btn btn-warning') %>
  <% end %>

</div>
